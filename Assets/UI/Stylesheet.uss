/* Variables */
:root{
    /* Colors */
    --color-text-primary: #FFFFFF;
    --color-text-secondary: #6c757d;
    --color-bg-primary: #0d6efd;
    --color-bg-secondary: #FFFFFF;
    --color-bg-warning:  #FFC107;
    --color-bg-danger: #DC3545;
    --color-bg-success: #198754;
    --color-bg-seeThru: rgba(0, 0, 0, 0.8);
    
    --color-bg-bottomMenu: rgba(0, 0, 0, 0.98);
    --color-bg-modal: #282828;
    
    /* Font size */
    --fontSize-xxl: 60px;
    --fontSize-xl: 50px;
    --fontSize-lg: 40px;
    --fontSize-md: 32px;
}

/* General classes */
.h1{
    color: var(--color-text-primary);
    font-size: var(--fontSize-xxl);
    -unity-font-style: bold;
    padding-bottom: 30px;
} 

.h2{
    color: var(--color-text-primary);
    font-size: var(--fontSize-xl);
    -unity-font-style: bold;
    padding-bottom: 40px;
}

.h3{
    color: var(--color-text-primary);
    font-size: var(--fontSize-lg);
    -unity-font-style: bold;
}

.h4{
    color: var(--color-text-primary);
    font-size: var(--fontSize-md);
}

/* Utility classes */
.wrappedText{
    white-space: normal;
}

.grey{
    color: var(--color-text-secondary);
}

.upperCenter{
    -unity-text-align: upper-center;
}

.margin_top_sm{
    margin-bottom: 15px;
}

.margin_bottom_sm{
    margin-bottom: 15px;
}

.margin_bottom_md{
    margin-bottom: 25px;
}

.margin_bottom_lg{
    margin-bottom: 35px;
}

.bold{
    -unity-font-style: bold;
}

/* Specific classes */
.container{
    background-image: url("../Images/king.png");
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    padding: 30px;
}

.title{
    margin-top: 30px;
}

.tab.hide{
    display: none;
}

.requestCard{
    height: 200px;
    background-color: var(--color-bg-seeThru);
    border-left-width: 15px;
    border-left-color: var(--color-bg-warning);
    padding: 10px 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 30px;
}

.requestCard.hide{
    display: none;
}

.requestCard.archived{
    background-color: var(--color-bg-seeThru);
    flex-direction: row;
    justify-content: space-between;
}

.requestCard.archived{
    border-left-color: var(--color-bg-success);
}

.requestCard.highPriority{
    border-left-color: var(--color-bg-danger);
}

.bottomContainer{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.requestCard.archived .leftCol{
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.requestCard.archived .rightCol{
    width: 20%;
    display: flex;
    justify-content: center;
}

.restoreBtn{
    --unity-image: url("../Images/undoBtn.png");
}

.textContainer{
    height: 1300px;
}

.notesTextField{
    width: 100%;
    height: 100%;
    white-space: normal;
}

.notesTextField .unity-base-text-field__input{
    border-radius: 5px;
    font-size: var(--fontSize-md);
    margin-left: 0;
    height: 100%;
    background-color: var(--color-bg-seeThru);
    color: var(--color-text-primary);
    border-width: 0;
}

/* Modal */
.modalContainer{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 100%;
    bottom: 0;
    transition-property: left;
    transition-duration: 0.5s;
}

.modal{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    border-radius: 20px;
    background-color: var(--color-bg-modal);
    border-top-width: 2px;
    padding: 30px;
    border-left-width: 10px;
    border-left-color: var(--color-bg-warning);
}

.modalContainer.shownModal{
   left: 0;
}

.modal.highPriority
{
    border-left-color: var(--color-bg-danger);
}

.closeBtnContainer{
    width: 100px;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.closeBtn{
    --unity-image: url("../Images/back.png");
}

.textField{
    width: 100%;
    margin-left: 0;
}

.textField .unity-base-text-field__input{
    height: 50px;
    border-width: 2px;
    border-radius: 5px;
    background-color: var(--color-bg-secondary);
    font-size: var(--fontSize-md);
    margin-left: 0;
}

.btnContainer{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.btn{
    width: auto;
    align-self: center;
    height: 80px;
    font-size: var(--fontSize-md);
    -unity-font-style: bold;
    border-radius: 5px;
    padding: 5px 20px;
    border-width: 0;
}

.notesBtn{
    color: var(--color-text-primary);
    background-color: var(--color-bg-primary);
}

.completionBtn{
    color: var(--color-text-primary);
    background-color: var(--color-bg-success);
}

.btn.disabled{
    opacity: 0.05;
}

/* bottom menu */
.bottomMenu{
    background-color: var(--color-bg-bottomMenu);
    width: 100%;
    height: 120px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.bottomIcon{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120px;
    height: 100%;
    border-width: 3px;
}

.bottomIcon.active{
    border-top-color: var(--color-bg-secondary);
}

.pendingTask{
    --unity-image: url("../Images/pendingTasks.png");
}

.archive{
    --unity-image: url("../Images/archiveList.png");
}

.notes{
    --unity-image: url("../Images/notes.png");
}


/* scroll bar*/
.unity-scroller__low-button{
    display: none;
}

.unity-scroller__high-button{
    display: none;
}

.unity-base-slider__tracker{
    display: none;
}

.unity-base-slider__dragger{
    display: none;
}